{
  "name": "bun-react-template",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "src/index.tsx",
  "module": "src/index.tsx",
  "scripts": {
    "dev": "concurrently -k -n TAILWIND,BUN,TSR -c green,cyan,yellow \"bun run tailwind:watch\" \"NODE_ENV=development bun --hot src/index.tsx\" \"bun run watch-routes\"",
    "start": "NODE_ENV=production bun run src/index.tsx",
    "build": "NODE_ENV=production rm -rf public && bun build ./src/index.html --outdir=public --sourcemap --target=browser --minify --define:process.env.NODE_ENV='\\\"production\\\"' --env='BUN_PUBLIC_*'",
    "prebuild": "bun run tailwind && bun run generate-routes && bun run lint && bun run format && bun run test",
    "generate-routes": "tsr generate",
    "watch-routes": "tsr watch",
    "tailwind": "tailwindcss -i ./src/styles/index.css -o ./src/styles/output.css --minify",
    "tailwind:watch": "tailwindcss -i ./src/styles/index.css -o ./src/styles/output.css --watch --minify",
    "compile:macos64": "NODE_ENV=production bun build ./src/index.tsx --compile --minify --target=bun-darwin-x64 --outfile=bin/macos/index",
    "compile:macosarm64": "NODE_ENV=production bun build ./src/index.tsx --compile --minify --target=bun-darwin-arm64 --outfile=bin/macos/index",
    "compile:linux64": "NODE_ENV=production bun build ./src/index.tsx --compile --minify --target=bun-linux-x64 --outfile=bin/linux/index",
    "compile:windows64": "NODE_ENV=production bun build ./src/index.tsx --compile --minify --target=bun-windows-x64 --outfile=bin/windows/index",
    "compile": "bun run prebuild && bun run compile:macos64 && bun run compile:macosarm64 && bun run compile:linux64 && bun run compile:windows64",
    "lint": "biome check . --write",
    "format": "biome format --write .",
    "test": "bun test"
  },
  "dependencies": {
    "@base-ui-components/react": "^1.0.0-beta.3",
    "@tailwindcss/cli": "^4.1.13",
    "@tanstack/react-form": "^1.20.0",
    "@tanstack/react-query": "^5.89.0",
    "@tanstack/react-query-devtools": "^5.89.0",
    "@tanstack/react-router": "^1.131.44",
    "@trpc/client": "^11.5.1",
    "@trpc/server": "^11.5.1",
    "@trpc/tanstack-react-query": "^11.5.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.544.0",
    "marked": "^16.3.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "sonner": "^2.0.7",
    "superjson": "^2.2.2",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.13",
    "tw-animate-css": "^1.3.8",
    "zod": "^4.1.8"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.4",
    "@tanstack/react-router-devtools": "^1.131.44",
    "@tanstack/router-cli": "^1.131.44",
    "@types/bun": "latest",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "concurrently": "^9.2.1"
  }
}
